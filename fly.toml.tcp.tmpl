app = "protohacker-zig"
primary_region = "lhr"
kill_signal = "SIGINT"
kill_timeout = "5s"

[[services]]
  protocol = "tcp"
  internal_port = 8080

  [[services.ports]]
    port = 10001
  [services.concurrency]
    hard_limit = 1100
    soft_limit = 800

  [[services.tcp_checks]]
    interval = "15s"
    timeout = "2s"
    restart_limit = 0
